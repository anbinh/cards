<aside id="sidebar-left" class="sidebar-left" ng-controller="AdminSideBarController">
   <div class="sidebar-header">
      <div class="sidebar-title">
         Navigation
      </div>
      <div class="sidebar-toggle hidden-xs" data-toggle-class="sidebar-left-collapsed" data-target="html" data-fire-event="sidebar-left-toggle">
         <i class="fa fa-bars" aria-label="Toggle sidebar"></i>
      </div>
   </div>
   <div class="nano">
      <div class="nano-content">
         <nav id="menu" class="nav-main" role="navigation">
            <ul class="nav nav-main">
               <li class="{{currentActiveParent == 'dashboard' ? 'nav-active' : '' }} ">
                  <a href="/dashboard/#/">
                  <i class="fa fa-home" aria-hidden="true"></i>
                  <span>Dashboard</span>
                  </a>
               </li>
               
               <li class="nav-parent {{currentActiveParent == 'cards' ? 'nav-expanded nav-active' : '' }}">
                  <a>
                  <i class="fa fa-credit-card" aria-hidden="true"></i>
                  <span>Cards</span>
                  </a>
                  <ul class="nav nav-children">
                     <li class="{{currentActiveChild == 'orders' ? 'nav-active' : '' }}">
                        <a href="/dashboard/#/orders">
                        All Cards Sold
                        </a>
                     </li>
                     <li class="{{currentActiveChild == 'receipts' ? 'nav-active' : '' }}">
                        <a href="/dashboard/#/receipts">
                        Purchased Cards
                        </a>
                     </li>

                     <li class="{{currentActiveChild == 'all_cards' ? 'nav-active' : '' }}">
                        <a href="/dashboard/#/cards">
                        All Cards
                        </a>
                     </li>

                     <li class="{{currentActiveChild == 'sold_cards' ? 'nav-active' : '' }}">
                        <a href="/dashboard/#/sold-cards">
                        All Sold Cards
                        </a>
                     </li>
                     
                  </ul>
               </li>
               <li class="nav-parent  {{currentActiveParent == 'customers' ? 'nav-expanded nav-active' : '' }}">
                  <a>
                  <i class="fa fa-users" aria-hidden="true"></i>
                  <span>Customers</span>
                  </a>
                  <ul class="nav nav-children">
                     <li class="{{currentActiveChild == 'users' ? 'nav-active' : '' }}">
                        <a  href="/dashboard/#/users">
                        Users
                        </a>
                     </li>
                     <li class="{{currentActiveChild == 'guests' ? 'nav-active' : '' }} nav-parent">
                        <a >
                        Guests
                        </a>
                        <ul class="nav nav-children">
                           
                           <li>
                              <a href="/dashboard/#/guests/buy_cards">Who Buy Cards</a>
                           </li>
                           <li>
                              <a href="/dashboard/#/guests/sell_cards">Who Sell Cards</a>
                           </li>
                        </ul>
                     </li>
                     <li  class="{{currentActiveChild == 'dealers' ? 'nav-active' : '' }}">
                        <a  href="/dashboard/#/dealers">
                        Dealers
                        </a>
                     </li>
                     
                  </ul>
               </li>
               
               <li class="{{currentActiveParent == 'inventory' ? 'nav-active' : '' }} ">
                  <a href="/dashboard/#/inventory" >
                  <i class="fa fa-archive" aria-hidden="true"></i>
                  <span>Inventory</span>
                  </a>
               </li>
               
            </ul>
         </nav>
         <hr class="separator" />
         <div class="sidebar-widget widget-tasks">
            <div class="widget-header">
               <h6>Most Popular Bought</h6>
               <div class="widget-toggle">+</div>
            </div>
            <div class="widget-content">
               <ul class="list-unstyled m-none">
                  <li ng-repeat="bought in popularBought">
                     <a href="/stores/#/{{bought.store_name}}" target="_blank" >{{bought.store_name | storename | titlecase}} ({{bought.count}})</a>
                  </li>
               </ul>
            </div>
         </div>


         <hr class="separator" />
         <div class="sidebar-widget widget-tasks">
            <div class="widget-header">
               <h6>Most Popular Sold</h6>
               <div class="widget-toggle">+</div>
            </div>
            <div class="widget-content">
               <ul class="list-unstyled m-none">
                  <li ng-repeat="bought in popularSold">
                     <a href="/stores/#/{{bought.store_name}}" target="_blank" >{{bought.store_name | storename | titlecase}} ({{bought.count}})</a>
                  </li>
               </ul>
            </div>
         </div>


         <hr class="separator" />
         <div class="sidebar-widget widget-stats">
            <div class="widget-header">
               <h6>Averages</h6>
               <div class="widget-toggle">+</div>
            </div>
            <div class="widget-content">
               <ul>
                  <li>
                     <span class="stats-title">Average Discount</span>
                     <span class="stats-complete">{{average.average_discount | number:2}}%</span>
                     <div class="progress">
                        <div class="progress-bar progress-bar-primary progress-without-number" role="progressbar" aria-valuenow="{{average.average_discount | number:0}}" aria-valuemin="0" aria-valuemax="100" style="width: {{average.average_discount | number:0}}%;">
                           <span class="sr-only">96% Complete</span>
                        </div>
                     </div>
                  </li>
                  <li>
                     <span class="stats-title">Average Margin</span>
                     <span class="stats-complete">{{average.average_margin | number:2}}%</span>
                     <div class="progress">
                        <div class="progress-bar progress-bar-primary progress-without-number" role="progressbar" aria-valuenow="{{average.average_margin | number:0}}" aria-valuemin="0" aria-valuemax="100" style="width: {{average.average_margin | number:0}}%;">
                           <span class="sr-only">45% Complete</span>
                        </div>
                     </div>
                  </li>
                  <li>
                     <span class="stats-title">Average Profit</span>
                     <span class="stats-complete">${{average.average_profit | number:2}}</span>
                     <div class="progress">
                        <div class="progress-bar progress-bar-primary progress-without-number" role="progressbar" aria-valuenow="52" aria-valuemin="0" aria-valuemax="100" style="width: 52%;">
                           <span class="sr-only">%520 Complete</span>
                        </div>
                     </div>
                  </li>
               </ul>
            </div>
         </div>
      </div>
   </div>
</aside>